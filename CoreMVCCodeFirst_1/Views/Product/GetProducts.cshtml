@model ProductResponsePageVM
<div class="container">
    <div class="row">

        <div class="col-6">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Isim</th>
                        <th>Fiyat</th>
                        <th>Kategori</th>
                        <th>Guncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (ProductResponseModel item in Model.Products)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.ProductName</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.CategoryName</td>
                            <td><a asp-action="UpdateProduct" asp-controller="Product" class="btn btn-warning" asp-route-id="@item.ID">Güncelle</a></td>
                            <td><a asp-action="DeleteProduct" asp-controller="Product" class="btn btn-danger" asp-route-id="@item.ID">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>



        <div class="col-6">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Kategori ID</th>
                        <th>Isim</th>
                        <th>Aciklama</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CategoryResponseModel item in Model.Categories)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.CategoryName</td>
                            <td>@item.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>




    </div>
</div>

  
